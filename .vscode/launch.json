{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "wpilib",
      "name": "WPILib Desktop Debug",
      "request": "launch",
      "desktop": true
    },
    {
      "type": "wpilib",
      "name": "WPILib roboRIO Debug",
      "request": "launch",
      "desktop": false
    },
    {
      "type": "debugpy",
      "name": "fieldCal",
      "program": "${workspaceFolder}/Scripts/FieldCal/FieldCal.py",
      "request": "launch",
      "cwd": "${workspaceFolder}/Scripts/FieldCal",
      "args": [
        "2025-reefscape.json",
        "field_calibration.json"
      ],
      "env": {
        "PYTHONPATH": "${workspaceFolder}/.venv/Lib/site-packages"
      },
      "console": "integratedTerminal"
    }
  ]
}
