// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/cpp
{
  "name": "WPI",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "remoteUser": "argos",
  "mounts": [
    "source=${localEnv:HOME}/.gradle,target=/home/argos/.gradle,type=bind,consistency=cached"
  ],
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.cpptools",
        "streetsidesoftware.code-spell-checker",
        "cschlosser.doxdocgen",
        "tyriar.sort-lines",
        "xaver.clang-format",
        "gruntfuggly.todo-tree",
        "elagil.pre-commit-helper",
        "stackbreak.comment-divider",
        "aaron-bond.better-comments",
        "github.vscode-github-actions"
      ]
    }
  },
  "features": {
    "ghcr.io/devcontainers-extra/features/pre-commit:2": {},
    // Eventually there should be support for installing more than one package...
    // https://github.com/devcontainers-extra/features/issues/89
    "ghcr.io/devcontainers-extra/features/pipx-package:1": {
      "package": "wpiformat",
      "version": "2024.51",
      "injections": "clang-format==18.1.1"
    }
  },
  "postCreateCommand": "pre-commit install ; pre-commit install-hooks ; git fetch origin main:main",
  "postStartCommand": "git fetch"
}
